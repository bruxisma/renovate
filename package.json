{
  "name": "renovate",
  "version": "1.0.0",
  "description": "Izzy Muerte's Common Renovate Configuration",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky install",
    "staged:config": "npx renovate-config-validator",
    "staged:format": "npx lint-staged",
    "format": "npx eslint --fix .",
    "check": "npx eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bruxisma/renovate.git"
  },
  "bugs": {
    "url": "https://github.com/bruxisma/renovate/issues"
  },
  "homepage": "https://github.com/bruxisma/renovate#readme",
  "devDependencies": {
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-json-schema-validator": "3.0.21",
    "eslint-plugin-jsonc": "2.3.0",
    "eslint-plugin-markdown": "2.2.1",
    "eslint-plugin-prettier": "4.1.0",
    "eslint-plugin-yaml": "0.5.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "renovate": "32.99.5"
  },
  "lint-staged": {
    "*.{yml,yaml}": "eslint --fix",
    "*.json": "eslint --ext json --fix .",
    "*.md": "eslint --ext md --fix ."
  },
  "renovate": {
    "extends": ["bruxisma/renovate"],
    "packageRules": [
      {
        "automerge": true,
        "matchUpdateTypes": ["major"]
      },
      {
        "matchPackageNames": ["renovate"],
        "schedule": ["after 12pm on sunday"]
      }
    ]
  },
  "prettier": {},
  "eslintIgnore": [".git/", ".husky/", "package-lock.json"],
  "eslintConfig": {
    "extends": ["plugin:markdown/recommended", "plugin:yaml/recommended"],
    "overrides": [
      {
        "files": ["**/*.json"],
        "excludedFiles": ["package.json", "package-lock.json"],
        "extends": [
          "plugin:json-schema-validator/recommended",
          "plugin:jsonc/recommended-with-json",
          "plugin:prettier/recommended"
        ],
        "rules": {
          "json-schema-validator/no-invalid": [
            "error",
            "https://docs.renovatebot.com/renovate-schema.json"
          ],
          "jsonc/sort-keys": [
            "error",
            {
              "hasProperties": ["addLabels"],
              "order": {
                "type": "asc"
              },
              "pathPattern": ".*"
            },
            {
              "hasProperties": ["labels"],
              "order": [
                "extends",
                "labels",
                "timezone",
                "commitMessagePrefix",
                "commitMessageSuffix",
                "semanticCommits",
                "rangeStrategy",
                "rebaseWhen",
                "rollback",
                "pin"
              ],
              "pathPattern": ".*"
            }
          ]
        }
      },
      {
        "files": ["package.json"],
        "extends": ["plugin:jsonc/recommended-with-json"],
        "rules": {
          "jsonc/array-bracket-newline": [
            "error",
            {
              "minItems": null,
              "multiline": true
            }
          ],
          "jsonc/array-bracket-spacing": ["error"],
          "jsonc/array-element-newline": [
            "error",
            "consistent"
          ],
          "jsonc/indent": [
            "error",
            2
          ],
          "jsonc/object-curly-newline": [
            "error",
            {
              "consistent": true
            }
          ],
          "jsonc/object-curly-spacing": [
            "error",
            "always",
            {
              "arraysInObjects": false,
              "objectsInObjects": false
            }
          ],
          "jsonc/object-property-newline": [
            "error",
            {
              "allowAllPropertiesOnSameLine": true
            }
          ],
          "jsonc/sort-keys": [
            "error",
            {
              "order": {
                "type": "asc"
              },
              "pathPattern": "rules"
            }
          ]
        }
      }
    ]
  }
}
